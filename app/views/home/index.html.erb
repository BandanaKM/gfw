<% content_for :title do
  t('.title')
end %>

<div id="map_container">
  <ul class="filters hidden">
    <li><%= link_to t('.map.filters.concessions') %></li>
    <li><%= link_to t('.map.filters.protected_areas') %></li>
    <li><%= link_to t('.map.filters.intact_forest') %></li>
    <li><%= link_to t('.map.filters.mining') %></li>
    <li><%= link_to t('.map.filters.forest_cover') %></li>
    <li><%= link_to t('.map.filters.forest') %></li>
    <li><%= link_to t('.map.filters.fire') %></li>
    <li><%= link_to t('.map.filters.carbon') %></li>
    <li><%= link_to t('.map.filters.biodiversity') %></li>
  </ul>
  <div id="map" class="map"></div>
</div>

<div class="actions">
  <ul>
    <li class="crowdsourcing">
    <div class="icon"></div>
    <h2><%= t('.icons.crowdsourcing.title') %></h2>
    <p><%= t('.icons.crowdsourcing.text') %></p>
    <%= link_to (content_tag :span, t('.icons.crowdsourcing.link')), {}, :class => :btn %>
    </li>

    <li class="analysis">
    <div class="icon"></div>
    <h2><%= t('.icons.analysis.title') %></h2>
    <p><%= t('.icons.analysis.text') %></p>
    <%= link_to (content_tag :span, t('.icons.analysis.link')), {}, :class => "btn disabled" %>
    </li>

    <li class="keep_updated">
    <div class="icon"></div>
    <h2><%= t('.icons.keep_updated.title') %></h2>
    <p><%= t('.icons.keep_updated.text') %></p>
    <%= link_to (content_tag :span, t('.icons.keep_updated.link')), {}, :class => :btn %>
    </li>
  </ul>
</div>
