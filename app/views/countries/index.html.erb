<% content_for :title do %>
  <h1 class="header-title big"><%= t('.title') %></h1>
<% end %>

<% content_for :js do %>
  <script>
    $(function() {
      cdb.init(function() {
        window.countries_index = new gfw.ui.view.CountriesIndex();
      });
    });
  </script>
<% end %>

<div class="inner">
  <div class="countries_block">
    <h2 class="header-title">Explore worldwide data in the <%= link_to "global overview", countries_overview_path %></h2>
  </div>
</div>

<ul class="countries inner">
  <% @countries.each do |c| %>
    <% if c['enabled'] %>
      <li id="<%= c['iso'] %>" class="country">
        <a href="<%= country_path(id: c['iso']) %>">
          <span class="country-content">
            <h3 class="<%= c['name'].length > 14 ? ' small' : '' %>"><%= c['name'] %></h3>
          </span>
        </a>
      </li>
    <% end %>
  <% end %>
</ul>
