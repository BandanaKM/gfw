<%countries = Country.countries_info;%>

<div id="countries">

  <h1><%= t(".title") %></h1>

  <% countries.each do |country| %>
    <div class="country ">
      <% if country[:class] != :disabled %>
        <a href="/country/<%= country[:name].downcase.gsub(" ", "_") %>">
        <% end %>
        <div class="icon" id="icon<%= country[:iso]%>">
        </div>

        <div class="content"><h4><%= country[:name] %></h4> <strong>19,312</strong> Forest Clearing Alerts in the last 6 months</div>
        <% if country[:class] != "disabled" %>
        </a>
      <% end %>
    </div>
  <% end %>
  <div class="select"></div>
</div>

