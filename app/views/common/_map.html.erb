<div id="map-container">

  <%= render "common/filters" %>

  <div class="timeline">
    <div class="inner">
      <ul class="years">
        <li><a href="#">2006</a></li>
        <li><a href="#">2007</a></li>
        <li><a href="#">2008</a></li>
        <li><a href="#">2009</a></li>
        <li><a href="#">2010</a></li>
        <li><a href="#">2011</a></li>
        <li><a href="#">2012</a></li>
      </ul>
      <div class="handle">
        <div><strong>JAN</strong> 2006</div>
      </div>
    </div>
  </div>

  <div class="draw">
    <%= link_to t('.draw_area'), '#', :class => 'draw-area' %>
    <%= form_for :area, :url => areas_path, :html => {:method => :post, :class => 'save-area'} do |f| %>
      <%= f.hidden_field :the_geom %>
      <%= f.email_field :email, :placeholder => 'Email' %>
      <%= f.submit t('.save_area') %>
    <% end -%>
  </div>

  <div id="zoom_controls"></div>
  <div id="map" class="map"></div>
</div>
