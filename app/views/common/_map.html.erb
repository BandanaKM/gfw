<div id="map-container">

  <%= render "common/filters" %>

  <div class="timeline">
    <div class="inner">
      <div class="tooltip">
        <div><strong>FEB</strong> 2006</div>
      </div>
      <ul class="years">
        <li>2006</li>
        <li>2007</li>
        <li>2008</li>
        <li>2009</li>
        <li>2010</li>
        <li>2011</li>
        <li>2012</li>
      </ul>
      <div class="handler"></div>
    </div>
  </div>

  <div class="draw">
    <%= link_to t('.draw_area'), '#', :class => 'draw-area' %>
    <%= form_for :area, :url => areas_path, :html => {:method => :post, :class => 'save-area'} do |f| %>
      <%= f.hidden_field :the_geom %>
      <%= f.email_field :email, :placeholder => 'Email' %>
      <%= f.submit t('.save_area') %>
    <% end -%>
  </div>

  <div id="zoom_controls"></div>
  <div id="map" class="map"></div>
</div>
