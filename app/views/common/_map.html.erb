<div id="map-container">

  <%= render "common/filters" %>

  <div class="timeline _hidden">
    <div class="tooltip">
      <span><strong>FEB</strong> 2006</span>
    </div>
  </div>

  <%= link_to t('.draw_area'), '#', :class => 'draw-area' %>
  <%= form_for :area, :url => areas_path, :html => {:method => :post, :class => 'save-area'} do |f| %>
    <%= f.hidden_field :the_geom %>
    <%= f.email_field :email, :placeholder => 'Email' %>
    <%= f.submit t('.save_area') %>
  <% end -%>

  <div id="zoom_controls"></div>
  <div id="map" class="map">
  </div>
</div>
