<% content_for :js do %>

  <script type="text/javascript">
    var flagSummary = { icon: "flag", count: "2,931", title: "Forest clearing alerts in the last 16 days" }
    var areaSummary = { icon: "area", count: "3,182", title: "Hectares of forest cleared in 2012" }
  </script>

  <script id="timeline-template" type="text/x-underscore-template">
    <div class="inner">
      <ul class="years">
        <li><a href="#">2006</a></li>
        <li><a href="#">2007</a></li>
        <li><a href="#">2008</a></li>
        <li><a href="#">2009</a></li>
        <li><a href="#">2010</a></li>
        <li><a href="#">2011</a></li>
        <li><a href="#">2012</a></li>
        <li class="disabled"><a href="#">2013</a></li>
      </ul>
      <div class="coordinates"></div>
      <div class="constraint_handler">
        <div class="handle">
          <a href="#" class="play"></a>
          <div><strong>JAN</strong> 2006</div>
        </div>
      </div>
    </div>
  </script>

  <script id="window-template" type="text/x-underscore-template">
      <a href="#" class="close"></a>
      <div class="content"></div>
  </script>

  <script id="layer-item-radio-template" type="text/x-underscore-template">
    <li id="filter_{{ id }}" class="{{ category }}"><a href="#" class="radio {{ category }} {{ disabled ? 'disabled' : '' }}" data-name={{ category }}>{{name}}</a>

    <a href="#" data-category="{{category}}" data-slug="{{slug}}" class="source{{ slug == 'nothing' || slug == 'annual' ? ' hidden' : '' }}"></a>

    </li>
  </script>

  <script id="layer-item-checkbox-template" type="text/x-underscore-template">
    <li id="filter_{{ id }}" class="{{ category }}">

    <a href="#" data-id={{ id }} class="checkbox {{ disabled ? 'disabled' : '' }}">
      <i><span></span></i>
      <span class="name">{{name}}</span>
    </a>

    <a href="#" data-category="{{category}}" data-slug="{{slug}}" class="source{{ slug == 'ip_brazil_eucalyptus' || slug == 'app_indonesia_wgs84' || slug == 'ip_brazil_farm_wgs84' || slug == 'regrowth' || slug == 'user_stories' ? ' hidden' : '' }}"></a>

    </li>

  </script>

  <script id="filter-template" type="text/x-underscore-template">
    <li class="{{ category }}" data-id="{{ data }}">
    <div class="icon"></div>
    <a href="#">{{ name }}</a>
    <div class="line"></div>
    <div class="box"></div>
    </li>
  </script>

  <script id="circle-template" type="text/x-underscore-template">
    <div class="circle">
      <div class="icon {{icon}}">
        <i></i>
      </div>
      <div class="inner">
        <div class="counter">{{count}}</div>
        <div class="title">{{title}}</div>
        <div class="background"></div>
        <div class="explore">Explore the map</div>
      </div>
    </div>
  </script>

  <!-- Gallery -->

  <script id="gallery-template" type="text/x-underscore-template">
    <div class="gallery">
      <h3>{{title}}</h3>
      <div class="inner">
        <ul></ul>
      </div>
      <a href="#" class="left"></a>
      <a href="#" class="right"></a>
    </div>
  </script>

  <script id="gallery_item-template" type="text/x-underscore-template">
    <li>
    <a href="{{url}}">
      <div class="thumb"><img src="{{thumb_url}}" alt="{{tilte}}" /></div>
      <strong>{{title}}</strong>
      <p>{{description}}</p>
    </a>
    </li>
  </script>


  <!-- Language -->
  <script id="language_selector-template" type="text/x-underscore-template">
    <div class="tip"></div>
    <ul class="languages"></ul>
  </script>

  <script id="language-template" type="text/x-underscore-template">
    <li class="lang_{{ code }}" data-lang="{{lang}}" data-title="{{title}}"><a href="http://translate.google.com/translate?sl=en&tl={{code}}&js=n&prev=_t&hl=en&ie=UTF-8&eotf=1&u={{currentURL}}">{{title}}</a></li>
  </script>

  <!-- Layer selector -->
  <script id="layer_selector-template" type="text/x-underscore-template">
    <a href="#" class="toggle"></a>
    <ul class="selected_layer"></ul>
    <ul class="layers"></ul>
  </script>

  <script id="layer-template" type="text/x-underscore-template">
    <li id="{{name}}" class="{{ name }}"><a href="#"><i></i>{{title}}</a></li>
  </script>


  <!-- Legend -->
  <script id="legend-template" type="text/x-underscore-template">
    <a href="#" class="toggle"></a>
    <div class="layer_count">0 layers</div>
    <div class="content"></div>
    <div class="shadow"></div>
  </script>

  <script id="legend-group-template" type="text/x-underscore-template">
    <ul class="{{category}}">
      <li class="{{ category }}"><strong style="color:{{category_color}};">{{category_title}}</strong></li>
      <li id="{{cat_id}}" class="{{ category }}"> <i style="background-color:{{title_color}};"></i><div>{{title}} <a href="#" data-slug="{{slug}}" data-category="{{category}}" class="source {{category}}"></a></div></li>
    </ul>
  </script>

  <script id="legend-item-template" type="text/x-underscore-template">
    <li id="{{cat_id}}" class="{{ category }}"> <i style="background-color:{{title_color}};"></i><div>{{title}} <a href="#" data-slug="{{slug}}" data-category="{{category}}" class="source {{category}}"></a></div></li>
  </script>

  <script id="dialog-template" type="text/x-underscore-template">
    <h1>{{title}}</h1>
    <a href="#" class="close"></a>
    <div class="buttons">
      <a href="#" class="btn red dark_glow accept">{{accept}}</a>
      <a href="#" class="btn yellow dark_glow cancel">{{cancel}}</a>
    </div>
  </script>



<% end %>
