<% content_for :js do %>
  <script>
    $(function() {
      cdb.init(function() {
        window.accept_terms = new gfw.ui.view.Terms();
      });
    });
  </script>
<% end %>

<% content_for :title do %>
  <h1 class='header-title'><%= '<span>Global Forest Watch</span> Terms of Service'.html_safe %></h1>
  <p class='header-description'><i class='scroll-icon'></i> Please click "I Agree" to continue</p>
<% end %>

<div contenteditable='false' class='terms_field'>
  <%= render 'shared/terms' %>
</div>

<div class="terms_footer notranslate">
  <%= link_to 'I agree', root_path, class: 'btn accept_btn dark_glow continue', :'data-source' => "accept_terms" %> <%= link_to 'I do not agree', root_path, class: 'btn cancel_btn dark_glow cancel' %>
</div>

<section class="section">
  <div class="section-footer">
    <p class='last'>For additional information about GFW, please send an email to <a href='mailto:gfw@wri.org'>gfw@wri.org</a></p>
  </div>
</section>

<div id='sources' class='sources'>
  <h2 class='source_category_title notranslate'>Please confirm</h2>

  <ul class='sources'>
    <li id='accept_terms'>
      <div class='source_body'>
        <p class="notranslate">You acknowledge that you have read and agree to the Global Forest Watch Terms of Service.</p>

        <%= form_tag('/accept', { :class => 'terms_footer notranslate' }) do %>
          <%= submit_tag "I agree", class: 'btn accept_btn dark_glow' %> <%= link_to 'I do not agree', root_path, class: 'btn cancel_btn dark_glow' %>
        <% end %>
      </div>
    </li>
  </ul>
</div>
