<% content_for :js do %>
  <script>
    $(function() {
      cdb.init(function() {
        window.accept_terms = new gfw.ui.view.Terms();
      });
    });
  </script>
<% end %>

<% content_for :title do %>
  <h1 class='header-title'><%= 'Welcome to the <span>Global Forest Watch</span> beta site'.html_safe %></h1>
  <p class='header-description'><i class='scroll-icon'></i> Before entering the GFW beta site, you must agree to the Terms of Service</p>
<% end %>

<p>Global Forest Watch (GFW) is a dynamic online forest monitoring and alert system that empowers people everywhere to better manage forests.</p>

<p><strong>We recommend visiting GFW using the latest version of Google Chrome, Mozilla Firefox, or Apple Safari. Internet Explorer may cause errors when viewing the site.</strong></p>

<div contenteditable='false' class='terms_field'>
  <%= render 'shared/terms' %>
</div>

<p class='last'>For additional information about GFW, please send an email to <a href='mailto:gfw@wri.org'>gfw@wri.org</a></p>

<section class='section'>
  <div class="section-footer">
    <%= link_to 'I agree', root_path, class: 'btn accept_btn dark_glow continue', :'data-source' => "accept_terms" %> <%= link_to 'I do not agree', root_path, class: 'btn accept_btn dark_glow' %>
  </div>
</section>

<div id='sources' class='sources'>
  <h2 class='source_category_title'>Terms of Service</h2>

  <ul class='sources'>
    <li id='accept_terms'>
      <div class='source_body'>
        <p>You acknowledge that you have read and agree to the Global Forest Watch Terms of Service.</p>

        <%= form_tag('/accept', { :class => 'terms_footer' }) do %>
          <%= submit_tag "I agree", class: 'btn accept_btn dark_glow' %> <%= link_to 'I do not agree', root_path, class: 'btn accept_btn dark_glow' %>
        <% end %>
      </div>
    </li>
  </ul>
</div>
