<% content_for :title do
  t('.title')
end %>

<div class="featured">

  <div class="inner">

    <ul>
      <% @featured.each do |story| %>
        <li class="<%= left_or_right_class = cycle('left', 'right') %>">

          <div class="content">
            <h2><%= link_to story.title, story %></h2>
            <p><%= truncate(story.details, :length => 295) %></p>
            <%= link_to 'Read more', story %>
          </div>

          <a href="<%= story_path(story) %>">
            <div class="frame">
              <%= image_tag(story_image_or_map(story)) %>
            </div>
          </a>

        </li>
      <% end %>
    </ul>

    <div class="pagination">
      <%= link_to content_tag(:span, 'Previous case studies'), previous_page_link(@page), :class => "btn hollow" if @page > 1%>
      <%= link_to content_tag(:span, 'Next case studies'), next_page_link(@page), :class => "btn hollow" unless last_page?%>
    </div>

  </div>

</div>

<%= render 'common/reported_stories' %>
