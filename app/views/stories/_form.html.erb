<% content_for :js do %>
  <script>
    $(function() {
      cdb.init(function() {
        window.stories_edit = new gfw.ui.view.StoriesEdit();
      });
    });
  </script>
<% end %>

<%= form_tag('http://wip.gfw-apis.appspot.com/stories/new') do %>
  <div class="field">
    <div class='input_title'>
      <%= label_tag 'Title' %>
    </div>

    <div class="input-field huge">
      <%= text_field_tag :title, '', :placeholder => 'Illegal Logging in National Park' %>
    </div>
  </div>

  <div class="field">
    <div class='optional'>
      <%= label_tag 'Affected areas' %> <span>Drop a pin on the map near the affected area</span>
    </div>

    <div class="stories_map-container" class="error">
      <a href="/#remove" class="remove_story-link">Remove</a>
      <div id="stories_map" class="map stories_map"></div>
    </div>

    <%= hidden_field_tag :the_geom %>
  </div>

  <div class="field">
    <div class="optional">
      <%= label_tag 'Where did it happen areas' %> <span>Optional</span>
    </div>

    <div class="input-field huge">
      <%= text_field_tag :where_did_it_happen, '', :placeholder => 'Katingan Peatland area, Indonesia,” “Near Ambanja, Mozambique"' %>
    </div>
  </div>

  <div class="field">
    <div class="optional">
      <%= label_tag 'When did it happen' %> <span>Optional</span>
    </div>

    <div class="input-field huge">
      <%= text_field_tag :when_did_it_happen, '', :placeholder => '“November 2013”, “Since 2005”, etc.' %>
    </div>
  </div>

  <div class="field">
    <div class="optional">
      <%= label_tag 'Details' %> <span>Optional</span>
    </div>

    <div class="input-field huge">
      <%= text_field_tag :details, '', :placeholder => '“Selective logging with chainsaws”, “Burning peatland”, “Forest cleared for agriculture”, “Affected species”' %>
    </div>
  </div>

  <div class="field media">
    <div class='inner_media'>
      <ul class="thumbnails">
        <li><a href='#' class='upload_picture'></a></li>

      <%# (@story.media || []).each do |media| %>
        <!-- li id="photo_<%#= @story.id %>" class="thumbnail sortable">
          <img src="<%#= media['url'] %>">
          <%#= link_to '', media, :class => "destroy" %>
        </li -->
      <%# end %>
      </ul>
    </div>

    <p class="hint">Drag and drop images and videos to upload them or reorder them in the carrousel. The first one will appear as the featured image.</p >
  </div>

  <div class="field">
    <%= label_tag 'Name' %>

    <div class="input-field short">
      <%= text_field_tag :name %>
    </div>

    <p class="hint">If you share your name, it will be visible on the GFW website, but your e-mail will not be published.</p>
  </div>

  <div class="field">
    <%= label_tag 'Email' %>

    <div class="input-field short">
      <%= text_field_tag :email %>
    </div>

    <p class="hint">In some areas, forest clearing information is considered to be highly sensitive—users are encouraged to be cautious when sharing their names.</p>
  </div>

  <% if action_name == 'edit' %>
  <div class="field with_checkbox">
    <a href="#" class="checkbox styled<%= @story.featured ? " checked" : "" %>">
      Show it as Story

      <%= text_field_tag :name %>
      <input name="story[featured]" type="hidden" value="<%= @story.featured %>" />
    </a>
  </div>
  <% end %>

  <div class="field last">
    <%= submit_tag 'Submit story' %>
  </div>
<% end %>
